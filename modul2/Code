// document.getElementById('sprite2').style.backgroundColor = "green";


// Sprite Moving

let modifier = 5;
let sprite = document.querySelector('#sprite')

sprite.style.backgroundColor = "green";

window.addEventListener('load', () => {
    sprite.style.position = 'absolute';
    sprite.style.top = 0;
    sprite.style.left = 0;
});

window.addEventListener('keydown', (event) => {
    switch (event.key) {
        
        case 'ArrowDown': sprite.style.top = parseInt(sprite.style.top) + modifier + 'px';
        break;

        case 'ArrowUp': sprite.style.top = parseInt(sprite.style.top) - modifier + 'px';
        break;

        case 'ArrowRight': sprite.style.left = parseInt(sprite.style.left) + modifier + 'px';
        break;

        case 'ArrowLeft': sprite.style.left = parseInt(sprite.style.left) - modifier + 'px';
        break;
        
    }
});
